<%= form_for(@phone_call) do |f|%>
<ul>
    <% @phone_call.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
</ul>
<p>
    <%= f.label :caller %><br />
    <%= f.text_field :caller %>
</p>
<p>
    <%= f.label :start_time %><br />
    <%= f.datetime_local_field :start_time %>
</p>
<p>
  <%= f.label :end_time %><br />
  <%= f.datetime_local_field :end_time %>
</p>
<p>
    <%= f.submit%>
</p>
<% end %>
